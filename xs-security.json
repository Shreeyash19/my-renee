{
  "xsappname": "my-renee",
  "tenant-mode": "dedicated",
  "description": "Security profile of called application",
  "scopes": [
    {
      "name": "$XSAPPNAME.author",
      "description": "Author new lessons and edit them"
    },
    {
      "name": "$XSAPPNAME.curate",
      "description": "Curate and publish authored lessons"
    },
    {
      "name": "$XSAPPNAME.administer",
      "description": "Maintain files and configurations to keep app operational"
    },
    {
      "name": "$XSAPPNAME.view",
      "description": "View Lessons Learned as PowerPoint deck"
    },
    {
      "name": "$XSAPPNAME.Administrator",
      "description": "Renee-Administrator"
    },
    {
      "name": "$XSAPPNAME.Curator",
      "description": "Renee-Curator"
    },
    {
      "name": "$XSAPPNAME.Author",
      "description": "Renee-Author"
    },
    {
      "name": "$XSAPPNAME.renee-Administrator",
      "description": "renee-Administrator"
    },
    {
      "name": "$XSAPPNAME.renee-Curator",
      "description": "renee-Curator"
    },
    {
      "name": "$XSAPPNAME.renee-Author",
      "description": "renee-Author"
    }
  ],
  "role-templates": [
    {
      "name": "Renee-Author",
      "description": "Authors new lessons and edits their own lessons",
      "default-role-name": "Author: Authorized to create and edit their own lessons",
      "scope-references": [
        "$XSAPPNAME.view",
        "$XSAPPNAME.author"
      ]
    },
    {
      "name": "Renee-Curator",
      "description": "Curates and publishes lessons assigned to them via their self-maintained areas of expertise",
      "scope-references": [
        "$XSAPPNAME.view",
        "$XSAPPNAME.author",
        "$XSAPPNAME.curate"
      ]
    },
    {
      "name": "Renee-Administrator",
      "description": "Maintains app operational ",
      "scope-references": [
        "$XSAPPNAME.author",
        "$XSAPPNAME.curate",
        "$XSAPPNAME.administer",
        "$XSAPPNAME.view"
      ]
    },
    {
      "name": "Renee-User",
      "description": "Downloads PowerPoint decks of Lessons Learned",
      "scope-references": [
        "$XSAPPNAME.view"
      ]
    }
  ],
  "authorities": [
    "$ACCEPT_GRANTED_AUTHORITIES"
  ],
  "oauth2-configuration": {
    "system-attributes": [],
    "credential-types": [
      "binding-secret",
      "x509"
    ],
    "redirect-uris": [
      "https://**.cfapps.eu10.hana.ondemand.com/**",
      "https://**.cfapps.eu10-004.hana.ondemand.com/login/callback/**",
      "https://**.cfapps.eu10-004.hana.ondemand.com/**",
      "https://**.cfapps.us10-001.hana.ondemand.com/**",
      "https://**cfapps.us10.hana.ondemand.com/**"
    ]
  },
  "xsenableasyncservice": "true",
  "attributes": []
}

{
    "_version": "3.0.0",
    "identification": {
      "id": "com.example.multiapp.launchpad",
      "title": "Multi-App Launchpad",
      "description": "A launchpad with multiple apps, catalogs, and pages"
    },
    "payload": {
      "catalogs": [
        {
          "id": "main_catalog",
          "title": "Main Catalog",
          "tiles": [
            {
              "id": "app1_tile",
              "title": "App 1",
              "subTitle": "First Application",
              "icon": "sap-icon://home",
              "target": {
                "appId": "com.example.app1",
                "inboundId": "app1-display"
              }
            },
            {
              "id": "app2_tile",
              "title": "App 2",
              "subTitle": "Second Application",
              "icon": "sap-icon://business-objects-experience",
              "target": {
                "appId": "com.example.app2",
                "inboundId": "app2-display"
              }
            }
          ]
        },
        {
          "id": "additional_catalog",
          "title": "Additional Catalog",
          "tiles": [
            {
              "id": "app3_tile",
              "title": "App 3",
              "subTitle": "Third Application",
              "icon": "sap-icon://customer",
              "target": {
                "appId": "com.example.app3",
                "inboundId": "app3-display"
              }
            }
          ]
        }
      ],
      "groups": [
        {
          "id": "group1",
          "title": "Main Group",
          "isPreset": true,
          "isVisible": true,
          "tiles": [
            {"id": "app1_tile"},
            {"id": "app2_tile"}
          ]
        },
        {
          "id": "group2",
          "title": "Secondary Group",
          "isPreset": true,
          "isVisible": true,
          "tiles": [
            {"id": "app3_tile"}
          ]
        }
      ],
      "sites": [
        {
          "id": "com.example.multiapp.site",
          "title": "Multi-App Site",
          "description": "Site containing multiple applications",
          "payload": {
            "config": {
              "ushellConfig": {
                "bootstrapPlugins": {
                  "KeyUserPlugin": {
                    "component": "sap.ushell.plugins.rta"
                  }
                }
              }
            },
            "pages": [
              {
                "id": "page1",
                "title": "Home Page",
                "layout": "2ColumnLayoutWith75_25",
                "sections": [
                  {
                    "id": "section1",
                    "title": "Main Section",
                    "groups": ["group1"]
                  },
                  {
                    "id": "section2",
                    "title": "Secondary Section",
                    "groups": ["group2"]
                  }
                ]
              },
              {
                "id": "page2",
                "title": "Additional Page",
                "layout": "1ColumnLayout",
                "sections": [
                  {
                    "id": "section3",
                    "title": "Full Width Section",
                    "groups": ["group1", "group2"]
                  }
                ]
              }
            ],
            "defaultPage": "page1",
            "sap.cloud.portal": {
              "config": {
                "theme.id": "sap_fiori_3",
                "theme.active": ["sap_fiori_3", "sap_belize"]
              }
            }
          }
        }
      ]
    }
  }
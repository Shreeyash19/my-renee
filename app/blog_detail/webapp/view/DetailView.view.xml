<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="sap.btp.blogdetail.controller.DetailView">

    <App>
        <Page title="Detail Page">
            <content>
                <!-- Other UI elements -->
                <Text text="{/Classifications/'000'/label}" />
                <!-- Select control for the classification field -->
                <Select id="classificationSelect" width="200px" 
                    items="{path: '../Classifications'}" change=".onClassificationChange">
                    <core:Item key="{/code}" text="{/label}" />
                </Select>
                <!-- Other UI elements -->
            </content>
        </Page>
    </App>

</mvc:View>